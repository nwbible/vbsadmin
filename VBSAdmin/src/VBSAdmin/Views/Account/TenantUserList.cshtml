@model IEnumerable<VBSAdmin.Models.AccountViewModels.UserListViewModel>

@{
    ViewData["Title"] = "Church User List";
}

<h2>Church User List</h2>

<p>
    <a asp-action="Register" class="btn btn-primary">Register New User</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsTenantAdmin)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsTenantAdmin)
            </td>
            <td>
                <a asp-action="EditTenantUser" asp-route-id="@item.UserId">Edit</a> |
                <a asp-action="DeleteTenantUser" asp-route-id="@item.UserId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
