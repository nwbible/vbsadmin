@model IEnumerable<VBSAdmin.Models.ClassroomViewModels.IndexViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Classrooms</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Classroom</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Session)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Session.Period)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                @if (item.ChildCount <= 0)
                {
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                }
                else
                {
                    @if (item.ChildCount > 20)
                    {
                        <i class="fa fa-users fa-lg"></i><span class="badge badge-danger"><small>@item.ChildCount</small></span>
                    }
                    else
                    {
                        <i class="fa fa-users fa-lg"></i><span class="badge badge-success"><small>@item.ChildCount</small></span>
                    }
                }
            </td>
        </tr>
}
    </tbody>
</table>
